function copyTheCode(stringInput) {
    navigator.clipboard.writeText(stringInput)
    .then(() => {
        alert('Copied the code: '+stringInput);
    })
    .catch(() => {
        alert('something went wrong');
    });
}

  function fetchStructure() {
    $(list_of_banks).each(function (index, val) {
      let str = '', str_tab = '';
      str_tab += '<a class="box-flex" href="#' + val.href + '"><img src="' +  val.logo + '" height="15" style="margin-right:4px;"><strong>' + (url_en_val ? val.tab_en : val.tab_in) + '</strong></a>'
      str += '<div class="col-12 hdr-tab ' + val.href + '">'

      $(val.data).each(function(num, data){

            //card
      str +=   '<div class="row">'
      $(data.card).each(function (i, value){
            str += '<div class="col-12 col-md-6 img_container text-center mb-4">'
            str +=  '<div class="bank-card">'
            str +=   'Bonus<br/>'
            str +=   '<strong>'+(url_en_val ? value.bonus_en + '<br/><br/>' : value.bonus_in + '<br/><br/>')+'</strong>'
            str +=   url_en_val ? "Min. transaction<br/>" : "Min. transaksi<br/>" 
            str +=   '<strong>'+(url_en_val ? value.mintrans_en + '<br/><br/>' : value.mintrans_in + '<br/><br/>')+'</strong>'
            str +=   url_en_val ? "Period<br/>" : "Periode<br/>" 
            str +=   '<strong>'+(url_en_val ? value.period_en : value.period_in)+'</strong>'
//            str +=   '<img data-src="https://d2xjmi1k71iy2m.cloudfront.net/dairyfarm/id/pageImages/page__en_us_1674437988839_6_0.png" class="lazyload" style="display: inline; margin: 5px;">Code : <strong style="color: #0058a3;">'+ value.coupon_code +'</strong>'
//            str +=   '<hr class="dashed">'
//            str +=   '<a href="'+ (url_en_val ? value.url_en : value.url_in) +'" style="color: #0058a3;">' + (url_en_val ? "Terms and conditions" : "Syarat dan ketentuan") + '</a>'
//            str +=   '<hr class="dashed">'
//            str +=   '<a class="bank-button-card center" onclick="copyTheCode(\''+value.coupon_code+'\')">' + (url_en_val ? "Copy code" : "Salin kode") + '</a>'
            str +=  '</div>'
            str += '</div>'
      });
      str +=   '</div>'

        str += '<ul>'
      str += '<b>' + (url_en_val ? data.title_en : data.title_in) + '</b>'
      $(data.tnc).each(function (i, value) {
        str += '<li>'
        str += (url_en_val ? value.en : value.in)


        if (value.list) {
          str += '<ul>'
          $(value.list).each(function (j, list) {
            str += '<li>'
            str += (url_en_val ? list.en : list.in)
            str += '</li>'
          });
          str += '</ul>'
        }

        if (value.table) {
          str += '<table class="table-responsive-sm table_services" border="1">'
          str += '<thead>'
          str += '<tr>'
          $(value.table.title).each(function (j, title) {
            str += '<th rowspan="' + title.rowspan + '" colspan="' + title.colspan + '">'
            str += url_en_val ? title.en : title.in
            str += '</th>'
          });
          str += '</tr>'
          str += '</thead>'

          str += '<tbody>'
          $(value.table.row).each(function (j, row) {

            str += '<tr>'
            $(row.data).each(function (k, data) {
              str += '<td rowspan="' + data.rowspan + '" colspan="' + data.colspan + '">'
              str += url_en_val ? data.en : data.in
              str += '</td>'
            });
            str += '</tr>'

          });

          str += '</tbody>'

          str += '</table>'
        }


        str += '</li>'
      });
      str += '</ul>'
      });
      str += '</div>'



      $('#bank_container #tab_wrapper').append(str_tab);
      $('#bank_container .product_custom_bkp').append(str)
    });
  }

    function appendGuides_1(json) {
        let str = '';
        const url_en_val = document.documentElement.lang === 'en'
        $(json).each(function(index, value) {
            str += '<div class="col-12 col-md-6 img_container text-center mb-4">'
            str +=  '<div class="bank-card">'
            str +=   url_en_val ? value.text_en + '<br/><br/>' : value.text_in + '<br/><br/>'
            str +=   '<img data-src="https://d2xjmi1k71iy2m.cloudfront.net/dairyfarm/id/pageImages/page__en_us_1674437988839_6_0.png" class="lazyload" style="display: inline; margin: 5px;">Code : <strong style="color: #0058a3;">'+ value.coupon_code +'</strong>'
            str +=   '<hr class="dashed">'
            str +=   '<a href="'+ (url_en_val ? value.url_en : value.url_in) +'" style="color: #0058a3;">' + (url_en_val ? "Terms and conditions" : "Syarat dan ketentuan") + '</a>'
            str +=   '<hr class="dashed">'
            str +=   '<a class="bank-button-card center" onclick="copyTheCode(\''+value.coupon_code+'\')">' + (url_en_val ? "Copy code" : "Salin kode") + '</a>'
            str +=  '</div>'
            str += '</div>'
        });
        $('#appendGuides_1').html(str)
    }

  fetchStructure()
  $(document).ready(function () {
    $(window).on("hashchange", function (index) {
//        appendGuides_1(appendGuides_1_list)
//        $('#appendGuides_1').slick({
//            slidesToShow: 4,
//            slidesToScroll: 1,
//            adaptiveHeight: false,
//            fade: false,
//            speed: 500,
//            dots: false,
//            infinite: false,
//            autoplay: false,
//            responsive: [{
//                breakpoint: 768,
//                settings: {
//                    arrows: false,
//                    slidesToShow: 1,
//                    slidesToScroll: 1,
//                }
//            }, ]
//        });
      if (location.hash == '#' || location.hash == '') {
        $('.hdr-tab').hide();
        $('.cimb').fadeIn()
        $('a[href="#cimb"]').addClass('active-filter');
      } else {
        $('a[href]').removeClass('active-filter')
        $('a[href="' + location.hash.split("?")[0] + '"]').addClass('active-filter')
        $('.hdr-tab').hide()
        $('.' + location.hash.split("?")[0].replace('#', '')).fadeIn()
      }
    }).trigger("hashchange");
  });
</script>
