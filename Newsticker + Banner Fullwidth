    function moveComboToContentWrapperTop() {
      var $combo = $("#ikea-hp-combo");
      var $cw = $("#contentWrapper");
      if ($combo.length && $cw.length) {
        $cw.prepend($combo);
      }
    }

    /* ===== NEWS TICKER ===== */
    function initNewsTicker() {
      var $ticker = $("#ikea-news-ticker");
      if (!$ticker.length) return;

      var isEn = document.documentElement.lang === "en";
      var $link = $ticker.find(".int-link");
      var $headline = $ticker.find(".int-headline");

      if (!newsticker_data || !newsticker_data.length) {
        $ticker.hide();
        return;
      }

      var idx = 0;
      var intervalMs = 3000;

      function render(i) {
        var item = newsticker_data[i];
        var text = isEn ? item.headline_en : item.headline_in;
        var url = isEn ? item.url_en : item.url_in;

        $ticker.addClass("int-fade");
        setTimeout(function () {
          $headline.text(text);
          $link.attr("href", url);
          $ticker.removeClass("int-fade");
        }, 200);
      }

      render(idx);
      setInterval(function () {
        idx = (idx + 1) % newsticker_data.length;
        render(idx);
      }, intervalMs);
    }

    /* ===== BANNER ===== */
    function initBanner() {
      var $wrapper = $("#custom-main-banner-wrapper");
      var $root = $wrapper.find(".cmb-root");
      var $slidesContainer = $root.find(".cmb-slides");
      var $dotsContainer = $root.find(".cmb-dots");

      var isEn = document.documentElement.lang === "en";
      var now = new Date();

      var activeBanners = banners.filter(function (item) {
        var start = new Date(item.publish_date);
        var end = new Date(item.end_date);
        return now >= start && now <= end;
      });

      if (!activeBanners.length) {
        $wrapper.hide();
        return;
      }

      var slidesHtml = "";
      var dotsHtml = "";

      activeBanners.forEach(function (item, idx) {
        var banner_desktop, banner_mobile, banner_url;

        if (isEn) {
          banner_desktop = item.banner_en;
          banner_mobile = item.banner_en_m;
          banner_url = item.url_en;
        } else {
          banner_desktop = item.banner_in;
          banner_mobile = item.banner_in_m;
          banner_url = item.url_in;
        }

        slidesHtml +=
          '<div class="cmb-slide" data-index="' +
          idx +
          '">' +
          '  <a href="' +
          banner_url +
          '">' +
          "    <picture>" +
          '      <source srcset="' +
          banner_mobile +
          '" type="image/webp" media="(max-width: 767.98px)" />' +
          '      <img alt="' +
          item.banner_name +
          '" src="' +
          banner_desktop +
          '" class="cmb-image" />' +
          "    </picture>" +
          "  </a>" +
          "</div>";

        dotsHtml +=
          '<button type="button" class="cmb-dot" data-index="' +
          idx +
          '" aria-label="Go to slide ' +
          (idx + 1) +
          '"></button>';
      });

      $slidesContainer.html(slidesHtml);
      $dotsContainer.html(dotsHtml);

      var $dots = $dotsContainer.find(".cmb-dot");

      var currentIndex = 0;
      var autoplayDelay = 4500;
      var autoplayTimer = null;

      function updateTransform() {
        $slidesContainer.css(
          "transform",
          "translateX(" + -currentIndex * 100 + "%)"
        );
      }

      function goToSlide(index) {
        var total = $dots.length;
        if (index < 0) index = total - 1;
        if (index >= total) index = 0;
        currentIndex = index;
        updateTransform();
        $dots.removeClass("is-active").eq(currentIndex).addClass("is-active");
      }

      function nextSlide() {
        goToSlide(currentIndex + 1);
      }
      function prevSlide() {
        goToSlide(currentIndex - 1);
      }

      function startAutoplay() {
        stopAutoplay();
        autoplayTimer = setInterval(nextSlide, autoplayDelay);
      }

      function stopAutoplay() {
        if (autoplayTimer) {
          clearInterval(autoplayTimer);
          autoplayTimer = null;
        }
      }

      // Init
      $dots.eq(0).addClass("is-active");
      updateTransform();
      startAutoplay();

      // Controls
      $wrapper.find(".cmp-next").on("click", function () {
        stopAutoplay();
        nextSlide();
        startAutoplay();
      });
      $wrapper.find(".cmp-prev").on("click", function () {
        stopAutoplay();
        prevSlide();
        startAutoplay();
      });
      $dots.on("click", function () {
        stopAutoplay();
        goToSlide(parseInt($(this).attr("data-index"), 10));
        startAutoplay();
      });

      // Swipe
      var startX = null,
        startY = null;
      var SWIPE_THRESHOLD = 50;

      $root.on("touchstart", function (e) {
        var t = e.originalEvent.touches[0];
        startX = t.clientX;
        startY = t.clientY;
      });

      $root.on("touchend", function (e) {
        if (startX === null || startY === null) return;
        var t = e.originalEvent.changedTouches[0];
        var dx = t.clientX - startX;
        var dy = t.clientY - startY;

        if (Math.abs(dx) > Math.abs(dy) && Math.abs(dx) > SWIPE_THRESHOLD) {
          stopAutoplay();
          if (dx < 0) nextSlide();
          else prevSlide();
          startAutoplay();
        }

        startX = null;
        startY = null;
      });
    }

    $(document).ready(function () {
      moveComboToContentWrapperTop(); // keeps ticker+banner together as a unit
      initNewsTicker();
      initBanner();
    });
  })();
</script>
