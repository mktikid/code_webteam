<style type="text/css">.accordion-header-17 {
            cursor: pointer;
        }
        .accordion-icon {
            font-size: 24px;
            color: #6c757d;
            transition: transform 0.3s ease;
        }
        .accordion-header-17.active .accordion-icon {
            transform: rotate(45deg);
            display: inline-block;
        }
        .accordion-content-17 {
            display: none;
            overflow: hidden;
        }
        .accordion-content-17.active {
            display: block;
        }
</style>
<script>
        document.addEventListener('DOMContentLoaded', function() {
            // Get all accordion headers
            var accordionHeaders17 = document.querySelectorAll('.accordion-header-17');
            
            // Add click event to each header
            accordionHeaders17.forEach(function(header) {
                header.addEventListener('click', function() {
                    // Get the target content element (next sibling)
                    var content = this.nextElementSibling;
                    
                    // Check if this header is already active
                    var isActive = this.classList.contains('active');
                    
                    // If active, just close it
                    if (isActive) {
                        this.classList.remove('active');
                        content.classList.remove('active');
                    } else {
                        // Close all other active accordions
                        document.querySelectorAll('.accordion-header-17.active').forEach(function(activeHeader) {
                            activeHeader.classList.remove('active');
                            activeHeader.nextElementSibling.classList.remove('active');
                        });
                        
                        // Open this accordion
                        this.classList.add('active');
                        content.classList.add('active');
                    }
                });
            });
        });
    </script>
